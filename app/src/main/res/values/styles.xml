<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.LikeCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/like_selector</item>
    </style>

    <style name="Widget.AppTheme.IconButtonWithCounter" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="iconTint">@color/like_selector</item>
        <item name="android:minWidth">@dimen/min_size</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="marginHorizontal">@dimen/space</item>
        <item name="android:minHeight">@dimen/min_size</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.AppTheme.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:minWidth">@dimen/min_size</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">@dimen/min_size</item>
        <item name="iconTint">@color/icon_button_tint</item>
    </style>
</resources>